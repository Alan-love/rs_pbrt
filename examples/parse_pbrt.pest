// comments
comment_line = { "#" ~ (!NEWLINE ~ ANY)* ~ NEWLINE }
// statements
statement_line = { identifier ~ (!NEWLINE ~ ANY)* ~ NEWLINE }
// count empty lines later
empty_line = { NEWLINE }
// catch any lines left to do
todo_line = { (!NEWLINE ~ ANY)* ~ NEWLINE }
pbrt = { SOI ~
         (comment_line |
          statement_line |
          empty_line |
          todo_line
         )* ~
         EOI }
